for post in page.posts.toArray()
    .post
        h2.post-title
            include ./helpers
            a(href=url_for(post.path))
                +title(post)
        .post-meta= post.date.format(config.date_format)
        if theme.duoshuo
            span.ds-thread-count(data-thread-key=post.path)
        if theme.disqus
            span.disqus-comment-count(data-disqus-identifier=post.path)
        if post.description
            .post-content
                != post.description
        else if page.excerpt
            .post-content
                != post.excerpt
        else if post.content
            - var br = post.content.indexOf('<a id="more"></a>')
            if br < 0
                .post-content
                    != post.content
            else
                .post-content
                    != post.content.substring(0, br)

                p(class="readmore")
                    a(href=url_for(post.path))= __('Readmore')